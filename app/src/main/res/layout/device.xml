<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#1f1e1e">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="SPD   "
            android:textColor="#d4d2d2"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/deviceSPD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPD"
            android:textColor="#d4d2d2"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:background="#d4d2d2">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="ELB   "
            android:textSize="20sp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/deviceELB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELB"
            android:textSize="20dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:background="#d4d2d2">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="전력량   "
            android:textSize="20sp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/devicePower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="power"
            android:textSize="20dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:background="#d4d2d2">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="T/H   "
            android:textSize="20sp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/deviceTem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tem_hum"
            android:textSize="20dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/deviceHum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tem_hum"
            android:textSize="20dp"
            android:layout_marginLeft="8dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:background="#d4d2d2">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="PM   "
            android:textSize="20sp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/deviceDust1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dust1"
            android:textSize="20dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/deviceDust2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dust2"
            android:textSize="20dp"
            android:layout_marginLeft="8dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:background="#d4d2d2">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Co2   "
            android:textSize="20sp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/deviceCo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Co2"
            android:textSize="20dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:background="#d4d2d2">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/area_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="area_id"
            android:textSize="20dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="device_id"
            android:textSize="20dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="device_name"
            android:textSize="20dp"
            android:textColor="#d4d2d2"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>